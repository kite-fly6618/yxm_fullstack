*
  margin 0
  padding 0
ul li
  list-style none
#toast
  display none

.movie
    width 100%
    &-head
      width 100%
      height 40px
      line-height 40px
      background-color #1e2025
      color #fff
      padding 0 10px
      box-sizing border-box
      display flex
      .iconfont 
        width 16px
      .title
        flex 1
        text-align center
    &-info
      padding 15px
      background-color #1e2025
      &__desc
        width 100%
        display flex
        .info-pic
          width 122px
          height 165px
          overflow hidden
          img 
            width 100%
        .info-container
            flex 1
            color #9b9da2
            font-size 12px
            margin-left 10px
            .name
              color #fff
              font-family Arial,sans-serif
              font-weight normal
            .type
              span 
                width 40px
                height 14px
                display inline-block
                background url('https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png')
                background-size cover
                vertical-align middle
            .btn-wrap
              display flex
              margin-top 10px
              .flex
                flex 1
                background-color #58585b
                height 32px
                line-height 32px
                color #fff
                text-align center
                border-radius 4px
                &:first-child
                  margin-right 10px
                .iconfont
                  font-size 14px
                  display inline-block
      &__rate
        background-color #eee
        padding 10px
        border-radius 4px
        margin-top 15px
        .rate-title
          display flex
          justify-content space-between
          &__left
            color #ffffff
            .icon-maoyan1
              color red
          &__right
            color #68686b
            font-size 10px
        .rate-detail
          display flex
          &__left
            flex 454
            display flex
            box-sizing border-box
            .grade
              // margin-left 23px
              text-align center
              h2
                color #fcc300
              p
                color #68686b
                font-size 10px
            .star
              // margin-left 23px
              text-align right 
              display flex
              align-items center
              .list
                margin 2px 0
                display flex
                align-items center
                .star-num
                  flex 1
                  font-size 0
                  width 40px
                  img 
                    width 6px
                    height 6px
                .percent
                  width 68px
                  height 4px
                  background-color #252528
                  position relative
                  .percent-val
                    display inline-block
                    position absolute
                    left 0
                    top 0
                    height 100%
                    background-color #fcc300
                    width 80%

   
          &__right
            flex 266
            display flex
            img 
              height 46px
              text-align center
    &-desc
      padding 15px
      .content
        transition all 0.5s ease
      .line-clamp
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 3
        word-wrap break-word
        word-break break-all
        overflow hidden
      .arror
        text-align center
        font-size 16px
        .iconfont
          display block
          transform rotateZ(0deg)
          transition all 0.5s ease
      .arror .up
        display block
        transform rotateZ(180deg)
        
          



      





            
      


                


      

            
